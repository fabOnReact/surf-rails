.container
  =# render 'card', post: @post
  .row 
    .col-md-4
      = image_tag @post.picture.url.to_s, class: 'img-fluid', alt: 'Responsive image'
    .col-md-6
      = image_tag @post.location.google_map
      %p.card-title #{@post.location.name} in #{@post.city} 
      %p.card-text #{@post.location.current_forecast["waveHeight"].first["value"]} mt. Waves
      %p.card-text posted #{distance_of_time_in_words(server_date, @post.utc_date)} ago #{@post.description}

  -# if @post.owner?(current_user)
    = link_to 'Edit', edit_post_path(@post), class: 'btn btn-primary btn-lg'
  =# link_to 'Back', :back, class: 'btn btn-primary btn-lg'
  =# link_to 'All Pictures', posts_path, class: 'btn btn-primary btn-lg'
