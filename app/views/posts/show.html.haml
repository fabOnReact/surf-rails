- location = @post.location
= tag :meta, id: "forecast-data", name: "forecast_data", data: { tide: location.tide, dates: location.tideDates } 

.container
  %h3 CURRENT SURF REPORT FOR #{location.name.upcase}
  .row 
    .map.d-flex.align-items-center.ml-3{style: "background-image: url(#{location.google_map})"}
      = image_tag "down-arrow.png", class: 'arrow wind-arrow', style: "transform: rotate(#{location.windDirection}deg)"
      = image_tag "down-cursor.png", class: 'arrow wave-arrow', style: "transform: rotate(#{location.waveDirection}deg)"
    .col-md-5
      .d-flex.flex-row.justify-content-start.align-items-center 
        %h3.font-weight-bold.mr-3 #{location.waveHeight} mt. waves
        = image_tag "down-cursor-black", class: "arrow-small", style: "transform: rotate(#{location.waveDirection}deg)"
      .d-flex.flex-row.justify-content-start 
        %h3.mr-3 #{location.windSpeed} mt/s wind
        = image_tag "down-arrow-black", class: "arrow-small", style: "transform: rotate(#{location.windDirection}deg)"
      // %p.card-text posted #{distance_of_time_in_words(server_date, @post.utc_date)} ago #{@post.description}
    .col-md-5
      %canvas{id: "tideChart", width: "800", height: "200"}
  .row.mt-2.pl-3
    - location.posts.each do |post|
      .col-md-2.px-1
        = image_tag post.picture.url.to_s, class: 'img-fluid', alt: 'Responsive image'

  -# if @post.owner?(current_user)
    = link_to 'Edit', edit_post_path(@post), class: 'btn btn-primary btn-lg'
  =# link_to 'Back', :back, class: 'btn btn-primary btn-lg'
  =# link_to 'All Pictures', posts_path, class: 'btn btn-primary btn-lg'
